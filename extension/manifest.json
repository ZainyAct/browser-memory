{
  "manifest_version": 2,
  "name": "Browser Memory Logger",
  "version": "0.1.0",
  "permissions": ["tabs", "storage", "activeTab", "http://localhost:8000/*"],
  "background": {
    "scripts": ["service_worker.js"]
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-memory-logger@local",
      "strict_min_version": "109.0"
    }
  }
}
